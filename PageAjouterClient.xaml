<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TravailDeSession.PageAjouterClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravailDeSession"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    
    <Grid Margin="40">

        <Grid.Resources>

            <!-- Colors -->
            <Color x:Key="PrimaryColor">#D88A34</Color>
            <Color x:Key="SecondaryColor">#3A6C86</Color>
            <Color x:Key="NeutralDarkColor">#6A3A2A</Color>
            <Color x:Key="ErrorColor">#C4473A</Color>

            <!-- Brushes -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
            <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
            <SolidColorBrush x:Key="NeutralDarkBrush" Color="{StaticResource NeutralDarkColor}" />
            <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />

            <!-- TextBox Style  -->
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="0,3,0,10"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="BorderBrush" Value="#C9ADA4"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="{StaticResource NeutralDarkBrush}"/>
                <Setter Property="CornerRadius" Value="4"/>
            </Style>

            <!-- Button Style  -->
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Foreground" Value="{StaticResource NeutralDarkBrush}"/>
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Width" Value="170"/>
                <Setter Property="Height" Value="38"/>
                <Setter Property="CornerRadius" Value="5"/>
            </Style>

        </Grid.Resources>


        <!-- Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Créer un Client"
                   FontSize="22"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource PrimaryBrush}"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Nom -->
        <StackPanel Grid.Row="1" Margin="0,5">
            <TextBlock Text="Nom" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
            <TextBox x:Name="txtNom"/>
            <TextBlock x:Name="tbxErrorNom"
                       Text="Veuillez entrer un nom valide"
                       Foreground="{StaticResource ErrorBrush}"
                       FontSize="12"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Adresse -->
        <StackPanel Grid.Row="2" Margin="0,5">
            <TextBlock Text="Adresse" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
            <TextBox x:Name="txtAdresse"/>
            <TextBlock x:Name="tbxErrorAdresse"
                       Text="Veuillez entrer une adresse valide"
                       Foreground="{StaticResource ErrorBrush}"
                       FontSize="12"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Téléphone -->
        <StackPanel Grid.Row="3" Margin="0,5">
            <TextBlock Text="Téléphone" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
            <TextBox x:Name="txtTelephone"/>
            <TextBlock x:Name="tbxErrorTelephone"
                       Text="Veuillez entrer un numéro de téléphone valide"
                       Foreground="{StaticResource ErrorBrush}"
                       FontSize="12"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Grid.Row="4" Margin="0,5">
            <TextBlock Text="Email" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
            <TextBox x:Name="txtEmail"/>
            <TextBlock x:Name="tbxErrorEmail"
                       Text="Veuillez entrer un email valide"
                       Foreground="{StaticResource ErrorBrush}"
                       FontSize="12"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Button -->
        <Button Grid.Row="5"
                Content="Créer le Client"
                Click="ClientCreation_Click"/>
    </Grid>
</Page>
