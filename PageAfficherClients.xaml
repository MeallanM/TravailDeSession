<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TravailDeSession.PageAfficherClients"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravailDeSession"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="5 10 10 10" Spacing="12" Grid.Column="1">
            <Button x:Name="btnAjoutClient"
            Padding="16,10"
            CornerRadius="12"
            Background="#4CAF50"
            Foreground="White"
            Click="btnAjoutClient_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="6">
                    <FontIcon Glyph="&#xE710;" />
                    <TextBlock Text="Ajouter" />
                </StackPanel>
            </Button>
        </StackPanel>

        <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="30">
                <TextBlock Text="Liste des Clients" HorizontalAlignment="Center" x:Name="tbTitrePageAfficher" FontSize="24" FontWeight="Bold"/>
                <GridView ItemsSource="{x:Bind Clients}"
              IsItemClickEnabled="True"
        ItemClick="lvAfficher_ItemClick"
        Height="auto"
              x:Name="lvbShowClients">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:Client">
                            <StackPanel Margin="0,5">
                                <TextBlock Text="{x:Bind Nom}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Bind Email}" TextWrapping="Wrap" Width="100"/>
                                <Border x:Name="BtnLikeText"
                                Width="140"
                                Height="70"
                                Background="#0B99B2"
                                CornerRadius="6"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                                    <TextBlock Foreground="White"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                FontSize="14">Afficher<LineBreak/>----------<LineBreak/>Modifier</TextBlock>
                                </Border>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
