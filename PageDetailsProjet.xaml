<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TravailDeSession.PageDetailsProjet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravailDeSession"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">

        <Grid Margin="40">

            <Grid.Resources>
                <!-- Colors -->
                <Color x:Key="PrimaryColor">#D88A34</Color>
                <Color x:Key="SecondaryColor">#3A6C86</Color>
                <Color x:Key="NeutralDarkColor">#6A3A2A</Color>
                <Color x:Key="ErrorColor">#C4473A</Color>

                <!-- Brushes -->
                <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
                <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
                <SolidColorBrush x:Key="NeutralDarkBrush" Color="{StaticResource NeutralDarkColor}" />
                <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />

                <!-- Button Style -->
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="Margin" Value="0,10,0,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="Height" Value="38"/>
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Grid.Resources>

            <!-- Layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Numéro Projet -->
                <RowDefinition Height="Auto"/>
                <!-- Client ID -->
                <RowDefinition Height="Auto"/>
                <!-- Titre -->
                <RowDefinition Height="Auto"/>
                <!-- Date Début -->
                <RowDefinition Height="Auto"/>
                <!-- Description -->
                <RowDefinition Height="Auto"/>
                <!-- Budget -->
                <RowDefinition Height="Auto"/>
                <!-- Nb Employés -->
                <RowDefinition Height="Auto"/>
                <!-- Total Salaires -->
                <RowDefinition Height="Auto"/>
                <!-- Client ID -->
                <RowDefinition Height="Auto"/>
                <!-- Statut -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                   Text="Détails du Projet"
                   FontSize="22"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource PrimaryBrush}"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

            <!-- Numéro Projet -->
            <StackPanel Grid.Row="1" Margin="0,5">
                <TextBlock Text="Numéro Projet" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBlock x:Name="tbNumeroProjet" FontSize="14" Foreground="Black"/>
            </StackPanel>

            <!-- Client ID -->
            <StackPanel Grid.Row="2" Margin="0,5">
                <TextBlock Text="Client ID" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBlock x:Name="tbClientId" FontSize="14" Foreground="Black"/>
            </StackPanel>

            <!-- Titre -->
            <StackPanel Grid.Row="3" Margin="0,5">
                <TextBlock Text="Titre" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBlock x:Name="tbTitre" FontSize="14" Foreground="Black"/>
            </StackPanel>

            <!-- Date Début -->
            <StackPanel Grid.Row="4" Margin="0,5">
                <TextBlock Text="Date de début" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBlock x:Name="tbDateDebut" FontSize="14" Foreground="Black"/>
            </StackPanel>

            <!-- Description -->
            <StackPanel Grid.Row="5" Margin="0,5">
                <TextBlock Text="Description" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBlock x:Name="tbDescription" FontSize="14" Foreground="Black" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Budget -->
            <StackPanel Grid.Row="6" Margin="0,5">
                <TextBlock Text="Budget" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBlock x:Name="tbBudget" FontSize="14" Foreground="Black"/>
            </StackPanel>

            <!-- Nombre d'employés requis -->
            <StackPanel Grid.Row="7" Margin="0,5" Orientation="Vertical">
                <TextBlock Text="Nombre d'employés requis"
               FontSize="15"
               Foreground="{StaticResource NeutralDarkBrush}"/>

                <!-- READONLY VALUE -->
                <TextBlock x:Name="tbNbEmployesRequis"
               FontSize="15"
               Margin="0,3,0,0"
               Foreground="{StaticResource NeutralDarkBrush}" />
            </StackPanel>

            <StackPanel Grid.Row="8" Margin="0,10,0,0">
                <TextBlock Text="Sélection des employés"
               FontSize="15"
               Foreground="{StaticResource NeutralDarkBrush}"
               Margin="0,0,0,5"/>

                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- LIST OF EMPLOYEES (READONLY) -->
                    <StackPanel x:Name="spEmployesSelectionDetails"
                    Grid.Column="0"
                    Orientation="Vertical">
                    </StackPanel>

                    <!-- EMPLOYEES INFOS -->
                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <TextBlock Text="Total Salaires :"
                       FontSize="14"
                       Foreground="{StaticResource SecondaryBrush}"
                       Margin="0,0,0,5"/>

                        <!-- READONLY TOTAL -->
                        <TextBlock x:Name="tbTotalSalaireDetails"
                       FontSize="14"
                       Foreground="{StaticResource NeutralDarkBrush}"/>

                        <!-- DETAILS -->
                        <TextBlock x:Name="tbEmployesDetails"
                       FontSize="13"
                       TextWrapping="Wrap"
                       Height="300"
                       Padding="5"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Total Salaires -->
            <StackPanel Grid.Row="9" Margin="0,5">
                <TextBlock Text="Total salaires" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBlock x:Name="tbTotalSalaires" FontSize="14" Foreground="Black"/>
            </StackPanel>
            
            <!-- Statut -->
            <StackPanel Grid.Row="10" Margin="0,5">
                <TextBlock Text="Statut (Actif / Inactif)" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBlock x:Name="tbStatut" FontSize="14" Foreground="Black"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="10" Margin="0,20,0,0">
                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Click="BtnModifier_Click" Content="Modifier" HorizontalAlignment="Stretch" />
                    <Button Grid.Column="1" Click="btnSupprimer_Click" Content="Supprimer" Background="{StaticResource ErrorBrush}"
                            HorizontalAlignment="Stretch" />
                </Grid>
            </StackPanel>

        </Grid>
    </ScrollViewer>


</Page>
