<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TravailDeSession.PageAjouterProjet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravailDeSession"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

        <Grid Margin="40">

            <Grid.Resources>

                <!-- Colors -->
                <Color x:Key="PrimaryColor">#D88A34</Color>
                <Color x:Key="SecondaryColor">#3A6C86</Color>
                <Color x:Key="NeutralDarkColor">#6A3A2A</Color>
                <Color x:Key="ErrorColor">#C4473A</Color>

                <!-- Brushes -->
                <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
                <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
                <SolidColorBrush x:Key="NeutralDarkBrush" Color="{StaticResource NeutralDarkColor}" />
                <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />

                <!-- TextBox Style -->
                <Style TargetType="TextBox">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Margin" Value="0,3,0,10"/>
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="BorderBrush" Value="#C9ADA4"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Foreground" Value="{StaticResource NeutralDarkBrush}"/>
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>

                <!-- Button Style -->
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="Margin" Value="0,10,0,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="Width" Value="170"/>
                    <Setter Property="Height" Value="38"/>
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>

            </Grid.Resources>


            <!-- Layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       x:Name="tbTitre"
                       FontSize="22"
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource PrimaryBrush}"
                       FontWeight="SemiBold"
                       Margin="0,0,0,20"/>


            <!-- TITRE -->
            <StackPanel Grid.Row="1" Margin="0,5">
                <TextBlock Text="Titre" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBox x:Name="txtTitre"/>
                <TextBlock x:Name="tbxErrorTitre"
                           Text="Veuillez entrer un titre valide"
                           Foreground="{StaticResource ErrorBrush}"
                           FontSize="12"
                           Visibility="Collapsed"/>
            </StackPanel>


            <ComboBox 
x:Name="CbbxClient"
                SelectedIndex="0"
Header="Client"
PlaceholderText="Choisir un client"
Margin="0,3,0,10"
MinWidth="200"/>
            
            <!-- DATE DÉBUT -->
            <StackPanel Grid.Row="2" Margin="0,5">
                <TextBlock Text="Date de début" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <DatePicker x:Name="dpDateDebut" Margin="0,3,0,10"/>
                <TextBlock x:Name="tbxErrorDateDebut"
                           Text="Veuillez sélectionner une date valide"
                           Foreground="{StaticResource ErrorBrush}"
                           FontSize="12"
                           Visibility="Collapsed"/>
            </StackPanel>


            <!-- DESCRIPTION -->
            <StackPanel Grid.Row="3" Margin="0,5">
                <TextBlock Text="Description" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <TextBox x:Name="txtDescription"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="100"/>
                <TextBlock x:Name="tbxErrorDescription"
                           Text="Veuillez entrer une description valide"
                           Foreground="{StaticResource ErrorBrush}"
                           FontSize="12"
                           Visibility="Collapsed"/>
            </StackPanel>


            <!-- BUDGET -->
            <StackPanel Grid.Row="4" Margin="0,5">
                <TextBlock Text="Budget" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <NumberBox x:Name="txtBudget"
               PlaceholderText="Ex: 120000"
               Margin="0,3,0,0"
               SpinButtonPlacementMode="Inline" />
                <TextBlock x:Name="tbxErrorBudget"
               Text="Veuillez entrer un budget valide"
               Foreground="{StaticResource ErrorBrush}"
               FontSize="12"
               Visibility="Collapsed"/>
            </StackPanel>


            <!-- NB EMPLOYÉS REQUIS -->
            <!-- NB EMPLOYÉS REQUIS -->
            <StackPanel Grid.Row="5" Margin="0,5" Orientation="Vertical">
                <TextBlock Text="Nombre d'employés requis" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <StackPanel Orientation="Horizontal">
                    <NumberBox x:Name="txtNbEmployesRequis"
                           Minimum="0" Maximum="5" SmallChange="1" LargeChange="1" Margin="0,3,0,0"
                           Width="80"/>
                </StackPanel>
                <TextBlock x:Name="tbxErrorNbEmployes"
               Text="Veuillez entrer un nombre valide"
               Foreground="{StaticResource ErrorBrush}"
               FontSize="12"
               Visibility="Collapsed"/>
                <TextBlock x:Name="tbxErrorSelectionEmp"
Text="Veuillez sélectionner des employés différends"
Foreground="{StaticResource ErrorBrush}"
FontSize="12"
Visibility="Collapsed"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="0,10,0,0">
                <TextBlock Text="Sélection des employés" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}" Margin="0,0,0,5"/>

                <Grid x:Name="grdEmployesSelection" ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Column 0: Matricule TextBoxes -->
                    <StackPanel x:Name="spEmployesSelection" Grid.Column="0" Orientation="Vertical" Spacing="5">
                        <ComboBox x:Name="cbMatricule1" PlaceholderText="Matricule 1"/>
                        <ComboBox x:Name="cbMatricule2" PlaceholderText="Matricule 2"/>
                        <ComboBox x:Name="cbMatricule3" PlaceholderText="Matricule 3"/>
                        <ComboBox x:Name="cbMatricule4" PlaceholderText="Matricule 4"/>
                        <ComboBox x:Name="cbMatricule5" PlaceholderText="Matricule 5"/>
                    </StackPanel>

                    <!-- Column 1: Hours NumberBoxes -->
                    <StackPanel x:Name="spHeuresTravail" Grid.Column="1" Orientation="Vertical" Spacing="5">
                        <NumberBox x:Name="nbHeures1" PlaceholderText="Heures 1" Minimum="0" Maximum="500"/>
                        <NumberBox x:Name="nbHeures2" PlaceholderText="Heures 2" Minimum="0" Maximum="500"/>
                        <NumberBox x:Name="nbHeures3" PlaceholderText="Heures 3" Minimum="0" Maximum="500"/>
                        <NumberBox x:Name="nbHeures4" PlaceholderText="Heures 4" Minimum="0" Maximum="500"/>
                        <NumberBox x:Name="nbHeures5" PlaceholderText="Heures 5" Minimum="0" Maximum="500"/>
                    </StackPanel>

                    <!-- Column 2: Employee info -->
                    <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,0,0,0">
                        <TextBlock Text="Total Salaires:" FontSize="14" Foreground="{StaticResource SecondaryBrush}" Margin="0,0,0,5" x:Name="tbTotalSalaire"/>
                        <TextBlock x:Name="tbEmployesDetails" FontSize="13" TextWrapping="Wrap" Height="300" Padding="5"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- TOTAL SALAIRES -->
            <StackPanel Grid.Row="7" Margin="0,5">
                <TextBlock Text="Total salaires" FontSize="15" Foreground="{StaticResource NeutralDarkBrush}"/>
                <NumberBox x:Name="txtTotalSalaires"
               PlaceholderText="Ex: 50000"
               Margin="0,3,0,0"
               SpinButtonPlacementMode="Inline" />
                <TextBlock x:Name="tbxErrorSalaires"
               Text="Veuillez entrer un total valide"
               Foreground="{StaticResource ErrorBrush}"
               FontSize="12"
               Visibility="Collapsed"/>
            </StackPanel>

            <!-- BUTTON -->
            <Button Grid.Row="8"
                    Content="Créer le Projet"
                    Click="ProjetCreation_Click"/>
        </Grid>

    </ScrollViewer>

</Page>
